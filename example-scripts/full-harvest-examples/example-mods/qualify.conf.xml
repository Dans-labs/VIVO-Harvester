<!--
Qualify - Used to remove statements from a Jena model based on certain criteria.
-
Qualify can be used to remove, for example, statements created by an XSLT file whose sole purpose was to assist
with Score.
-->
<Task>
	<!--
	jenaConfig - relative path to the configuration file for the Jena model in which we want to perform the Qualify.
	-->
	<Param name="jenaConfig">harvested-data.model.xml</Param>

	<!--
	remove-namespace - the namespace to use to determine if a statement should be removed.  If predicate-clean or
	                   clean-resources are specified, then statements with the predicate in this namespace or
	                   statements with subject or object in this namespace, respectively, will be removed.
	-->
	<Param name="remove-namespace">http://vivoweb.org/ontology/score#</Param>

	<!--
	predicate-clean - true if we want to remove all triples where the predicate is in the given namespace.
	-->
	<Param name="predicate-clean">true</Param>
</Task>
