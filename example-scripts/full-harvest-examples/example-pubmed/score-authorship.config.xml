<Task>
	<!--INPUT -->
	<Param name="inputJena-config">matched-data.model.xml</Param>
	
	<!--VIVO INPUT -->
	<Param name="vivoJena-config">vivo.model.xml</Param>
	
	<!--SCORING DATA OUTPUT -->
	<Param name="score-config">score-data.model.xml</Param>
	
	<!--OPTIONS -->
	<Param name="tempJenaDir">data/temp-score-model</Param>
	<Param name="namespace">http://vivoweb.org/harvest/pubmed/authorship/</Param>
	<Param name="reloadInput">true</Param><!-- our input changed due to match (and we are using match's output) -->
	
	<!--COMPARISIONS -->
	<!--AUTHOR LINK-->
	<Param name="algorithms">authlink=org.vivoweb.harvester.score.algorithm.EqualityTest</Param>
	<Param name="weights">authlink=0.5</Param>
	<Param name="inputJena-predicates">authlink=http://vivoweb.org/ontology/core#linkedAuthor</Param>
	<Param name="vivoJena-predicates">authlink=http://vivoweb.org/ontology/core#linkedAuthor</Param>
	
	<!--PUBLICATION LINK-->
	<Param name="algorithms">publink=org.vivoweb.harvester.score.algorithm.EqualityTest</Param>
	<Param name="weights">publink=0.5</Param>
	<Param name="inputJena-predicates">publink=http://vivoweb.org/ontology/core#linkedInformationResource</Param>
	<Param name="vivoJena-predicates">publink=http://vivoweb.org/ontology/core#linkedInformationResource</Param>
</Task>